#!/usr/bin/env sh

run() {
    pgrep -u "$UID" -x "$1" >/dev/null 2>&1 || "$@" &
}

run xfce4-power-manager

# Running Picom
~/.config/picom/start.sh &
# Auto pause/resume picom saat fullscreen
~/.config/picom/autopause.sh &

run sxhkd
run dunst

# PipeWire - start with script for better control
if [ -f "$HOME/.config/pipewire/start.sh" ]; then
    "$HOME/.config/pipewire/start.sh" &
else
    # Fallback
    pipewire &
    wireplumber &
fi
# PipeWire autostart
~/.config/bspwm/scripts/pipewire &

"$HOME/.config/polybar/launch.sh" &

feh --bg-fill \
    "$HOME/.config/bspwm/wallpaper/T4n-OS.jpg"
